<div class="row text-center">
  <form action="/urls" method="POST">
    {{#if error}}
      <div class="text-danger"><h1>已建立或網址格式不對</h1></div>
            <a href="/">
        <button type="button" class="btn btn-outline-secondary mt-3">
          返回
        </button></a>
    {{else}}
    <label for="fullUrl"></label>
    <input
      type="url"
      name="fullUrl"
      id="fullUrl"
      placeholder="Input URL here"
      size="60"
      required
    />
    <div class="mt-3">
      <button
        type="submit"
        class="btn btn-outline-primary btn-lg"
      >Shorten</button>
    </div>
  </form>
</div>
{{/if}}